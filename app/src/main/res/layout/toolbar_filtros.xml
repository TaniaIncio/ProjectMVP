<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_margin="@dimen/marg_icon_toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:src="@mipmap/x"/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/titulo_filtros"
        android:textColor="@color/titulo_azul_appintro"
        android:textSize="19sp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_aplicar"
                android:padding="10dp"
                android:clickable="true"
                android:textAllCaps="true"
                android:background="@drawable/selector_button_aplicar"
                android:layout_alignParentBottom="true"
                android:textColor="@color/titulo_azul_appintro"/>
            <!--android:background="@drawable/rectangle_withborde_celeste"-->
        </LinearLayout>
</LinearLayout>